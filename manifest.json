{
  "manifest_version": 2,
  "name": "Weather helper",
  "version": "1.0",
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },

  "permissions": [
    "geolocation"
  ],

  "browser_action": {
    "default_title": "WeatherHelper",
    "default_popup": "./popup/popup.html"
  }

}
